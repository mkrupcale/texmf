\mode<presentation>

\date{} % reset date for title page
% Title page: derived from beamerinnerthemedefault.sty
% - change default to right alignment instead of center
% - do not insert date if not provided (default uses \today)
\defbeamertemplate*{title page}{CVT}[1][]
{
  \vbox{}
  \vfill
  \begingroup
    \centering
    \begin{beamercolorbox}[sep=8pt,right,#1]{title}
      \usebeamerfont{title}\inserttitle\par%
      \ifx\insertsubtitle\@empty%
      \else%
        \vskip0.25em%
        {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}%
      \fi%
    \end{beamercolorbox}%
    \vskip1em\par
    \begin{beamercolorbox}[sep=8pt,right,#1]{author}
      \usebeamerfont{author}\insertauthor
    \end{beamercolorbox}
    \begin{beamercolorbox}[sep=8pt,right,#1]{institute}
      \usebeamerfont{institute}\insertinstitute
    \end{beamercolorbox}
    \ifx\insertdate\@empty%
    \else%
      \begin{beamercolorbox}[sep=8pt,right,#1]{date}
        \usebeamerfont{date}\insertdate
      \end{beamercolorbox}
    \fi%
    \vskip0.5em
    {\usebeamercolor[fg]{titlegraphic}\inserttitlegraphic\par}
  \endgroup
  \vfill
}

\mode
<all>
